                onAction="#onCreateUserButtonClick" text="Create New User" textAlignment="CENTER">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
        <Button alignment="CENTER" defaultButton="true" layoutX="239.0" layoutY="253.0" mnemonicParsing="false"
                onAction="#onSignInButtonClick" prefWidth="122.0" text="Sign In" textAlignment="CENTER">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
        <Button alignment="CENTER" cancelButton="true" layoutX="317.0" layoutY="330.0"
                minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleCloseButtonAction"
                prefWidth="122.0" text="Exit" textAlignment="CENTER">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
    </children>
